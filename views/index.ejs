<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('partials/navbar') %>

</head>

<body>

    <div class="container">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/carousell gift.jpg" alt="anniversary">
                </div>
            </div>
        </div>
        
        
            <br>
            <div class="text-center">
                <h2>All Products</h2>
            </div>
            <br>
            
            <div class="card-group">
            <div class="row">
                <% for(let i=0; i < products.length; i++) { %>
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="card">
                            <img class="card-img-top" src="/images/<%= products[i].image %>" alt="<%= products[i].name %>" style="width: 100%; height: 300px; object-fit: cover;">

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title" style="color: #000;"><a href="/product/<%= products[i].productId %>"><%= products[i].name %></a></h5>
                                <p class="card-text"><%= products[i].description %></p>
                                <p class="price">$<%= products[i].price %></p>

                                <div class="btn-container mt-auto">
                                    <a href="/editProduct/<%= products[i].productId %>" class="btn btn-primary">Edit</a>
                                    <a href="/deleteProduct/<%= products[i].productId %>"
                                        onclick="return confirm('Are you sure you want to delete this product?')"
                                        class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
            
        </div>
    </div>
<br><br>
</body>

</html>